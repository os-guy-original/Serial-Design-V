/* Main Configuration */
configuration {
    modi: "drun,run,window";
    show-icons: true;
    icon-theme: "Papirus-Dark";
    font: "Fira Sans 12";
    display-drun: " Apps";
    display-run: " Run";
    display-window: " Windows";
    sidebar-mode: false;
}

/* Theme Colors */
* {
    background:     #1E2526;
    background-alt: #2A3233;
    foreground:     #D8DEE9;
    selected:       #5E81AC;
    active:         #88C0D0;
    urgent:         #BF616A;
}

/* Window */
window {
    transparency: "real";
    location: center;
    anchor: center;
    width: 640px;
    padding: 20px;
    border: 2px;
    border-color: #2A3233;
    border-radius: 12px;
    background-color: #1E2526;
}

/* Main Box */
mainbox {
    background-color: transparent;
    border: 0px;
    padding: 0px;
}

/* Input Bar */
inputbar {
    children: [ prompt, entry ];
    background-color: #2A3233;
    border-radius: 8px;
    padding: 10px;
    spacing: 10px;
}

/* Prompt */
prompt {
    background-color: transparent;
    text-color: #88C0D0;
}

/* Entry */
entry {
    background-color: transparent;
    text-color: #D8DEE9;
    placeholder: "Search...";
    placeholder-color: #6C7880;
}

/* List View */
listview {
    background-color: transparent;
    padding: 10px 0px 0px 0px;
    columns: 1;
    lines: 8;
    spacing: 8px;
}

/* Elements */
element {
    background-color: transparent;
    text-color: #D8DEE9;
    padding: 8px;
    border-radius: 6px;
    /* Add transition properties */
    transition-property: background-color, text-color;
    transition-duration: 200ms;
    transition-timing: ease;
}

element-icon {
    size: 24px;
    margin: 0px 10px 0px 0px;
}

element-text {
    background-color: transparent;
    text-color: inherit;
}

/* Selected Element */
element.selected {
    background-color: #5E81AC;
    text-color: #FFFFFF;
}

/* Active/Urgent States */
element.active {
    text-color: #88C0D0;
}

element.urgent {
    text-color: #BF616A;
}

/* Scrollbar */
scrollbar {
    width: 4px;
    padding: 0px 4px 0px 0px;
    handle-width: 8px;
    handle-color: #5E81AC;
    background-color: #2A3233;
}
