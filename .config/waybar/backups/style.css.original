/* Generated theme with direct values - 2025-05-13 */

* {
    font-family: "Fira Sans", "Material Design Icons";
    font-size: 13px;
    font-weight: 500;
    border-radius: 8px;
    padding: 0;
    margin: 0;
    min-height: 0;
}

window#waybar {
    background: transparent;
    color: #ffffff;
    border: none;
    margin: 6px;
}

.modules-left, .modules-right, .modules-center {
    padding: 0 6px;
    background: transparent;
    margin: 4px 0;
}

.modules-center {
    padding: 0 10px;
}

/* Common module styling with themed borders */
#clock, #workspaces, #pulseaudio, #battery, #tray, #cava, #power-profiles-daemon, 
#custom-launcher, #custom-power, #custom-notification-center, #custom-screenshot, 
#custom-color-picker, #custom-system-monitor, #custom-selected-color, #network, 
#custom-wf-recorder-status {
    border: 2px solid #feb877;
}

#custom-launcher {
    padding: 0 14px;
    color: #ffffff;
    background: #130d07;
    transition: all 0.1s ease;
    margin: 0 4px;
    border: 2px solid #feb877;
}

#custom-launcher:hover {
    padding: 0 16px;
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
    margin: 0 4px;
}

#custom-launcher:active {
    background: #feb877;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#custom-power {
    padding: 0 14px;
    color: #000000;
    background: #ffffff;
    transition: all 0.1s ease;
    border-radius: 8px;
    margin: 0 4px;
    border: none;
    font-size: 16px;
}

#custom-power:hover {
    padding: 0 16px;
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
    border-radius: 8px;
    margin: 0 4px;
}

#custom-power:active {
    background: #feb877;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#custom-notification-center {
    padding: 0 14px;
    margin: 0 4px;
    background: #130d07;
    border-radius: 8px;
    transition: all 0.1s ease;
    border: 2px solid #feb877;
}

#custom-notification-center:hover {
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
}

#custom-notification-center:active {
    background: #feb877;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#workspaces {
    padding: 0;
    color: #ffffff;
    background: #130d07;
    transition: all 0.1s ease;
    border-radius: 8px;
    margin: 0 4px;
    border: 2px solid #feb877;
}

#workspaces button {
    padding: 0 8px;
    color: #ffffff;
    background: transparent;
    transition: all 0.1s ease;
    border-radius: 6px;
    margin: 3px;
    border: 2px solid #feb877;
}

#workspaces button:hover {
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
}

#workspaces button.active {
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
}

#clock {
    padding: 0 14px;
    font-weight: 600;
    background: #feb877;
    border-radius: 8px;
    margin: 0 4px;
    color: #000000;
    transition: all 0.1s ease;
    border: 2px solid #feb877;
    font-size: 14px;
}

#clock:hover {
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
    font-size: 16px;
    padding: 0 18px;
}

#clock:active {
    background: #feb877;
    color: #000000;
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.6);
    font-size: 13px;
    padding: 0 15px;
    margin: 0 5px;
    transition: all 0.1s ease;
    border: 2px solid #feb877;
}

#cava, #power-profiles-daemon, #custom-screenshot, #network, #pulseaudio, #battery, #tray, #custom-color-picker, #custom-selected-color {
    padding: 0 14px;
    color: #ffffff;
    background: #130d07;
    transition: all 0.1s ease;
    margin: 0 4px;
    border: 2px solid #feb877;
}

#cava:hover, #power-profiles-daemon:hover, #custom-screenshot:hover, #network:hover, #pulseaudio:hover, #battery:hover, #tray:hover, #custom-color-picker:hover, #custom-selected-color:hover {
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
}

#cava:active, #power-profiles-daemon:active, #custom-screenshot:active, #network:active, #pulseaudio:active, #battery:active, #tray:active, #custom-color-picker:active, #custom-selected-color:active {
    background: #feb877;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

/* System monitor with special styling */
#custom-system-monitor {
    padding: 0 14px;
    color: #ffffff;
    background: #130d07;
    transition: all 0.1s ease;
    margin: 0 4px;
    border: 2px solid #feb877;
    font-family: "Fira Sans", "Material Design Icons", monospace;
    letter-spacing: 1px;
}

#custom-system-monitor:hover {
    color: #000000;
    background: #feb877;
    transition: all 0.1s ease;
    padding: 0 18px;
}

#custom-system-monitor:active {
    background: #feb877;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#custom-system-monitor.warning {
    background: rgba(194, 204, 153, 0.9);
    color: #000000;
}

#custom-system-monitor.critical {
    background: rgba(226, 192, 164, 0.9);
    color: #000000;
    animation: blink 1s infinite alternate;
    border: 1px solid rgba(226, 192, 164, 0.9);
}

#custom-system-monitor.panic {
    background: rgba(106, 59, 2, 0.9);
    color: #ffffff;
    animation: panic-blink 0.7s cubic-bezier(.5, 0, 1, 1) infinite alternate;
    font-weight: bold;
    border: 1px solid rgba(106, 59, 2, 0.9);
}

#custom-system-monitor.critical:hover {
    background: rgba(106, 59, 2, 0.9);
}

#battery.charging {
    background: #feb877;
    color: #000000;
}

#battery.warning:not(.charging) {
    background: #c2cc99;
    color: #000000;
}

#battery.critical:not(.charging) {
    background: #e2c0a4;
    color: #000000;
}

tooltip {
    background: #130d07;
    border: 1px solid #feb877;
    border-radius: 6px;
    padding: 8px 12px;
}

tooltip label {
    color: #ffffff;
}

@keyframes blink {
    to {
        background-color: rgba(255, 255, 255, 0.9);
    }
}

@keyframes panic-blink {
    from {
        background: rgba(226, 192, 164, 0.9);
    }
    to {
        background: rgba(255, 255, 0, 0.9);
        color: #000000;
    }
}

.warning, .critical {
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: steps(12);
    animation-iteration-count: infinite;
    animation-direction: alternate;
}
