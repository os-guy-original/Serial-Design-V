/* Generated theme with direct values - 2025-06-28 */

* {
    font-family: "Fira Sans", "Material Design Icons";
    font-size: 13px;
    font-weight: 500;
    border-radius: 8px;
    padding: 0;
    margin: 0;
    min-height: 0;
}

window#waybar {
    background: transparent;
    color: #ffffff;
    border: none;
    margin: 6px;
}

.modules-left, .modules-right, .modules-center {
    padding: 0 6px;
    background: transparent;
    margin: 4px 0;
}

.modules-center {
    padding: 0 10px;
}

/* Common module styling with themed borders */
#clock, #workspaces, #pulseaudio, #battery, #tray, #cava, #power-profiles-daemon, 
#custom-launcher, #custom-power, #custom-notification-center, #custom-screenshot, 
#custom-color-picker, #custom-system-monitor, #custom-selected-color, #network, 
#custom-wf-recorder-status, #custom-main-center, #custom-hypridle-toggle, #custom-glava-toggle {
    border: 2px solid rgba(188, 194, 255, 0.9);
}

#custom-launcher {
    padding: 0 14px;
    color: #ffffff;
    background: rgba(13, 14, 19, 0.9);
    transition: all 0.1s ease;
    margin: 0 4px;
    border: 2px solid rgba(188, 194, 255, 0.9);
}

#custom-launcher:hover {
    padding: 0 16px;
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
    margin: 0 4px;
}

#custom-launcher:active {
    background: #bcc2ff;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#custom-power {
    padding: 0 14px;
    color: #000000;
    background: rgba(255, 255, 255, 0.9);
    transition: all 0.1s ease;
    border-radius: 8px;
    margin: 0 4px;
    border: none;
    font-size: 16px;
}

#custom-power:hover {
    padding: 0 16px;
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
    border-radius: 8px;
    margin: 0 4px;
}

#custom-power:active {
    background: #bcc2ff;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#custom-notification-center {
    padding: 0 14px;
    margin: 0 4px;
    background: rgba(13, 14, 19, 0.9);
    border-radius: 8px;
    transition: all 0.1s ease;
    border: 2px solid rgba(188, 194, 255, 0.9);
}

#custom-notification-center:hover {
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
}

#custom-notification-center:active {
    background: #bcc2ff;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#workspaces {
    padding: 0;
    color: #ffffff;
    background: rgba(13, 14, 19, 0.9);
    transition: all 0.1s ease;
    border-radius: 8px;
    margin: 0 4px;
    border: 2px solid rgba(188, 194, 255, 0.9);
}

#workspaces button {
    padding: 0 8px;
    color: #ffffff;
    background: transparent;
    transition: all 0.1s ease;
    border-radius: 6px;
    margin: 3px;
    border: 2px solid rgba(188, 194, 255, 0.9);
}

#workspaces button:hover {
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
}

#workspaces button.active {
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
}

#clock {
    padding: 0 14px;
    font-weight: 600;
    background: rgba(188, 194, 255, 0.9);
    border-radius: 8px;
    margin: 0 4px;
    color: #000000;
    transition: all 0.1s ease;
    border: 2px solid rgba(188, 194, 255, 0.9);
    font-size: 14px;
}

#clock:hover {
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
    font-size: 16px;
    padding: 0 18px;
}

#clock:active {
    background: #bcc2ff;
    color: #000000;
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.6);
    font-size: 13px;
    padding: 0 15px;
    margin: 0 5px;
    transition: all 0.1s ease;
    border: 2px solid rgba(188, 194, 255, 0.9);
}

#cava, #power-profiles-daemon, #custom-screenshot, #network, #pulseaudio, #battery, #tray, #custom-color-picker, #custom-selected-color, #custom-hypridle-toggle, #custom-glava-toggle {
    padding: 0 14px;
    color: #ffffff;
    background: rgba(13, 14, 19, 0.9);
    transition: all 0.1s ease;
    margin: 0 4px;
    border: 2px solid rgba(188, 194, 255, 0.9);
}

#cava:hover, #power-profiles-daemon:hover, #custom-screenshot:hover, #network:hover, #pulseaudio:hover, #battery:hover, #tray:hover, #custom-color-picker:hover, #custom-selected-color:hover, #custom-hypridle-toggle:hover, #custom-glava-toggle:hover {
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
}

#cava:active, #power-profiles-daemon:active, #custom-screenshot:active, #network:active, #pulseaudio:active, #battery:active, #tray:active, #custom-color-picker:active, #custom-selected-color:active, #custom-hypridle-toggle:active, #custom-glava-toggle:active {
    background: #bcc2ff;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#custom-hypridle-toggle.disabled {
    background: rgba(188, 194, 255, 0.9);
    color: #000000;
}

#custom-glava-toggle.active {
    background: rgba(188, 194, 255, 0.9);
    color: #000000;
}

/* System monitor with special styling */
#custom-system-monitor {
    padding: 0 14px;
    color: #ffffff;
    background: rgba(13, 14, 19, 0.9);
    transition: all 0.1s ease;
    margin: 0 4px;
    border: 2px solid rgba(188, 194, 255, 0.9);
    font-family: "Fira Sans", "Material Design Icons", monospace;
    letter-spacing: 1px;
}

#custom-system-monitor:hover {
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
    padding: 0 18px;
}

#custom-system-monitor:active {
    background: #bcc2ff;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

#custom-system-monitor.warning {
    background: rgba(230, 186, 214, 0.8);
    color: #000000;
}

#custom-system-monitor.critical {
    background: rgba(196, 197, 221, 0.8);
    color: #000000;
    animation: blink 1s infinite alternate;
    border: 1px solid rgba(196, 197, 221, 0.8);
}

#custom-system-monitor.panic {
    background: rgba(59, 66, 121, 0.8);
    color: #ffffff;
    animation: panic-blink 0.7s cubic-bezier(.5, 0, 1, 1) infinite alternate;
    font-weight: bold;
    border: 1px solid rgba(59, 66, 121, 0.8);
}

#custom-system-monitor.critical:hover {
    background: rgba(59, 66, 121, 0.8);
}

#battery.charging {
    background: rgba(188, 194, 255, 0.9);
    color: #000000;
}

#battery.warning:not(.charging) {
    background: rgba(230, 186, 214, 0.8);
    color: #000000;
}

#battery.critical:not(.charging) {
    background: rgba(196, 197, 221, 0.8);
    color: #000000;
}

/* Add styling for the main-center button */
#custom-main-center {
    padding: 0 14px;
    color: #ffffff;
    background: rgba(13, 14, 19, 0.9);
    transition: all 0.1s ease;
    margin: 0 4px;
    border: 2px solid rgba(188, 194, 255, 0.9);
    font-size: 14px;
}

#custom-main-center:hover {
    color: #000000;
    background: #bcc2ff;
    transition: all 0.1s ease;
    padding: 0 16px;
}

#custom-main-center:active {
    background: #bcc2ff;
    color: #000000;
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.4);
}

tooltip {
    background: rgba(13, 14, 19, 0.9);
    border: 1px solid rgba(188, 194, 255, 0.9);
    border-radius: 6px;
    padding: 8px 12px;
}

tooltip label {
    color: #ffffff;
}

@keyframes blink {
    to {
        background-color: rgba(255, 255, 255, 0.9);
    }
}

@keyframes panic-blink {
    to {
        background: rgba(59, 66, 121, 0.9);
        color: #ffffff;
    }
    from {
        background: rgba(196, 197, 221, 0.9);
        color: #000000;
    }
}

.warning, .critical {
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: cubic-bezier(.5, 0, 1, 1);
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

/* Specific styling for cava module */
#cava {
    padding: 0 10px;
    min-width: 180px;
    background: rgba(13, 14, 19, 0.85);
}

#cava.left, #cava.right {
    min-width: 100px;
}

#cava:hover {
    background: #bcc2ff;
}

#cava.gradient {
    background: linear-gradient(90deg, rgba(13, 14, 19, 0.85) 0%, rgba(188, 194, 255, 0.85) 100%);
}

/* Cava bars will use the format-icons colors */
#cava > * {
    color: #bcc2ff;
    font-size: 16px;
    font-weight: bold;
    padding: 0 1px;
    transition: color 0.1s ease;
}

#cava:hover > * {
    color: #0d0e13;
}
